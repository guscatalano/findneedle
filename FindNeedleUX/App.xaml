<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="FindNeedleUX.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FindNeedleUX"
    xmlns:pages="using:FindNeedleUX.Pages">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="SystemAccentColorBrush"
                 Color="{StaticResource SystemAccentColor}"
                 Opacity=".33" />
            <!-- Other app resources here -->
            <pages:BoolToEnabledConverter x:Key="BoolToEnabledConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
