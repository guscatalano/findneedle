<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FindNeedleUX.Windows.Location.LocationStart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FindNeedleUX.Windows.Location"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel MinWidth="300" MinHeight="300">
        <RadioButtons Header="Location Type">
            <RadioButton Content="Folder(s)/File(s)" Checked="RadioButton_Checked" Name="Folder" />
            <RadioButton Content="Local Machine's EventLog" Checked="RadioButton_Checked" Name="EventLog"/>
            <RadioButton Content="Local Machine's Registry" Checked="RadioButton_Checked" Name="Registry"/>
            <RadioButton Content="Visual Studio Online Work Item" Checked="RadioButton_Checked" Name="VSO"/>
        </RadioButtons>
        <Button Click="Button_Click" >Next</Button>
    </StackPanel>
</Page>
