<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FindNeedleUX.Pages.QuickLogWithRulesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24" RowSpacing="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="8">
            <TextBlock 
                Text="Quick: Open Log with Rules"
                Style="{ThemeResource TitleTextBlockStyle}"/>
            <TextBlock 
                Text="Select a log file and a rules file, then run the search to apply the rules."
                Style="{ThemeResource BodyTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <Grid Grid.Row="1" RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock 
                Grid.Row="0"
                Text="1. Log File"
                Style="{ThemeResource SubtitleTextBlockStyle}"/>

            <Grid Grid.Row="1" ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox 
                    x:Name="LogFilePathTextBox"
                    Grid.Column="0"
                    PlaceholderText="Select a log file (.txt, .log, .etl, .evtx, .zip)"
                    IsReadOnly="True"/>
                <Button 
                    x:Name="BrowseLogButton"
                    Grid.Column="1"
                    Content="Browse..."
                    Click="BrowseLogButton_Click"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="2" RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock 
                Grid.Row="0"
                Text="2. Rules File"
                Style="{ThemeResource SubtitleTextBlockStyle}"/>

            <Grid Grid.Row="1" ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox 
                    x:Name="RulesFilePathTextBox"
                    Grid.Column="0"
                    PlaceholderText="Select a rules file (.json)"
                    IsReadOnly="True"/>
                <Button 
                    x:Name="BrowseRulesButton"
                    Grid.Column="1"
                    Content="Browse..."
                    Click="BrowseRulesButton_Click"/>
            </Grid>

            <!-- Rules Validation Panel -->
            <Border 
                x:Name="RulesValidationPanel"
                Grid.Row="2"
                Visibility="Collapsed"
                CornerRadius="4"
                Padding="12"
                Margin="0,8,0,0">
                <StackPanel Spacing="4">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon 
                            x:Name="ValidationIcon"
                            FontSize="16"
                            VerticalAlignment="Center"/>
                        <TextBlock 
                            x:Name="ValidationStatusText"
                            FontWeight="SemiBold"
                            VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock 
                        x:Name="ValidationDetailsText"
                        TextWrapping="Wrap"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="12">
            <Button 
                x:Name="GoButton"
                Content="Run Search"
                Style="{ThemeResource AccentButtonStyle}"
                Click="GoButton_Click"
                IsEnabled="False"
                Width="120"/>
            <ProgressRing 
                x:Name="ProgressIndicator"
                Width="24"
                Height="24"
                IsActive="False"
                Visibility="Collapsed"/>
            <TextBlock 
                x:Name="StatusText"
                VerticalAlignment="Center"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <Border 
            Grid.Row="4"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8"
            Padding="16"
            VerticalAlignment="Top">
            <StackPanel Spacing="8">
                <TextBlock Text="Tips" FontWeight="SemiBold"/>
                <TextBlock 
                    Text="Supported log formats: .txt, .log, .etl, .evtx, .zip"
                    TextWrapping="Wrap"/>
                <TextBlock 
                    Text="Rules files should be JSON files with sections containing filter, enrichment, or UML rules"
                    TextWrapping="Wrap"/>
                <TextBlock 
                    Text="After running, you will be taken to the results view"
                    TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>